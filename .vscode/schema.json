{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://jaehho.github.io/resume/schema.json",
  "title": "Resume Schema",
  "type": "object",
  "required": ["name", "location", "phone", "email", "linkedin", "website"],
  "properties": {
    "name": { "type": "string" },
    "location": { "type": "string" },
    "phone": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "linkedin": { "type": "string" },
    "website": { "type": "string", "format": "uri" },
    "updated": { "type": "string" },

    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["institution", "degree", "start", "end"],
        "properties": {
          "institution": { "type": "string" },
          "location": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" },
          "degree": { "type": "string" },
          "bullets": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },

    "experience": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["position", "company", "location", "start", "end"],
        "properties": {
          "position": { "type": "string" },
          "company": { "type": "string" },
          "location": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" },
          "bullets": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },

    "extracurricular": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["position", "company", "location", "start", "end"],
        "properties": {
          "position": { "type": "string" },
          "company": { "type": "string" },
          "location": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" },
          "bullets": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },

    "skills": {
      "type": "object",
      "required": ["programming", "software", "certifications"],
      "properties": {
        "programming": {
          "type": "array",
          "items": { "type": "string" }
        },
        "software": {
          "type": "array",
          "items": { "type": "string" }
        },
        "certifications": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "ldjson": { "type": "string" }
  },
  "additionalProperties": false
}
