<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ name }} · CV</title>
  <meta name="description" content="CV of {{ name }} — {{ subtitle | default('Electrical Engineering, Bioengineering minor, Robotics, ML for healthcare') }}" />
  <meta name="robots" content="index,follow" />
  <meta name="theme-color" content="#0b0c0e" />
  <meta property="og:title" content="{{ name }} · CV" />
  <meta property="og:description" content="{{ subtitle | default('Electrical Engineering, Bioengineering minor, Robotics, ML for healthcare') }}" />
  <meta property="og:type" content="website" />
  {% if website %}<link rel="canonical" href="{{ website }}"/>{% endif %}
  <style>
    :root{
      --bg:#0b0c0e; --fg:#e9eef2; --muted:#b7c0c8; --card:#121419; --accent:#76e1a6;
      --rule:#1e232b; --ink:#0e1013; --link:#8ee6ff;
      --sans: system-ui,-apple-system,Segoe UI,Roboto,Inter,Arial,sans-serif;
    }
    @media (prefers-color-scheme: light){
      :root{--bg:#ffffff; --fg:#111418; --muted:#57606a; --card:#f7f9fc; --accent:#0fb478; --rule:#e6ebf1; --ink:#0b0c0e; --link:#006adc;}
    }
    html,body{background:var(--bg); color:var(--fg); font-family:var(--sans); line-height:1.5; -webkit-font-smoothing:antialiased; margin:0;}
    .wrap{max-width:940px; margin:0 auto; padding:32px 20px 72px;}
    header{display:grid; gap:8px; border-bottom:1px solid var(--rule); padding-bottom:18px; margin-bottom:22px;}
    h1{font-size:1.9rem; margin:0;}
    .subtitle{color:var(--muted); font-size:0.98rem}
    .contact{display:flex; flex-wrap:wrap; gap:10px; margin-top:6px}
    .contact a, .contact span{color:var(--link); text-decoration:none; font-variant-numeric:tabular-nums;}
    .chip{display:inline-block; padding:.28rem .6rem; border:1px solid var(--rule); border-radius:999px; font-size:.82rem; color:var(--muted)}
    section{margin:26px 0}
    h2{font-size:1.1rem; letter-spacing:.02em; text-transform:uppercase; color:var(--muted); margin:0 0 8px}
    .item{display:grid; grid-template-columns: 1fr auto; gap:6px 14px; padding:14px; border:1px solid var(--rule); border-radius:14px; background:var(--card); margin:10px 0}
    .role{font-weight:600}
    .orgline{color:var(--muted); font-size:.95rem}
    .dates{white-space:nowrap; font-variant-numeric:tabular-nums; color:var(--muted)}
    ul{margin:6px 0 0 18px}
    li{margin:6px 0}
    .grid-2{display:grid; grid-template-columns:repeat(2,minmax(0,1fr)); gap:12px}
    .skills ul{display:grid; grid-template-columns:repeat(3,minmax(0,1fr)); gap:6px 14px; list-style:none; padding:0; margin:8px 0 0}
    .skills li{margin:0}
    .tag{display:inline-block; border:1px solid var(--rule); border-radius:8px; padding:4px 8px; font-size:.92rem}
    a:hover{text-decoration:underline}
    .print-note{display:none; color:var(--muted); font-size:.85rem}
    footer{margin-top:28px; color:var(--muted); font-size:.9rem}
    .sr-only{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;border:0}

    @media (max-width:720px){
      .grid-2{grid-template-columns:1fr}
      .skills ul{grid-template-columns:repeat(2,minmax(0,1fr))}
      .item{grid-template-columns:1fr}
      .dates{order:3}
    }
    @media print{
      :root{--bg:#fff; --fg:#000; --muted:#444; --card:#fff; --rule:#bbb; --link:#000}
      .wrap{padding:0}
      header{border:none; padding:0; margin:0 0 12px}
      .item{break-inside:avoid}
      a[href^="http"]:after{content:" (" attr(href) ")"; font-size:.85em; color:#333}
      .print-note{display:block}
      footer{display:none}
    }
  </style>
  <script type="application/ld+json">{{ ldjson | safe }}</script>
</head>
<body>
  <a class="sr-only" href="#main">Skip to content</a>
  <div class="wrap" id="main">
    <header role="banner">
      <h1>{{ name }}</h1>
      <p class="subtitle">{{ subtitle | default('Electrical Engineering · Bioengineering minor · Robotics · ML for healthcare') }}</p>
      <div class="contact" aria-label="Contact">
        {% if location %}<span class="chip">{{ location }}</span>{% endif %}
        {% if phone %}<a href="tel:{{ phone | tel_href }}">{{ phone }}</a>{% endif %}
        {% if email %}<a href="mailto:{{ email }}">{{ email }}</a>{% endif %}
        {% if linkedin %}<a href="https://www.linkedin.com/in/{{ linkedin }}">LinkedIn</a>{% endif %}
        {% if website %}<a href="{{ website }}">Website</a>{% endif %}
        {% if pdf_url %}<a href="{{ pdf_url }}" download>Download PDF</a>{% endif %}
      </div>
      <p class="print-note">Tip: press “p” to print to PDF.</p>
    </header>

    {% if education %}
    <section aria-labelledby="edu">
      <h2 id="edu">Education</h2>
      {% for e in education %}
      <div class="item">
        <div>
          <div class="role">{{ e.institution }}</div>
          <div class="orgline">
            {% if e.degree %}{{ e.degree }}{% if e.location %} · {{ e.location }}{% endif %}{% else %}{{ e.location }}{% endif %}
          </div>
          {% if e.bullets %}
          <ul>{% for b in e.bullets %}<li>{{ b }}</li>{% endfor %}</ul>
          {% endif %}
        </div>
        <div class="dates">{% if e.start %}{{ e.start }}{% if e.end %} – {{ e.end }}{% endif %}{% endif %}</div>
      </div>
      {% endfor %}
    </section>
    {% endif %}

    {% if experience %}
    <section aria-labelledby="work">
      <h2 id="work">Work Experience</h2>
      {% for w in experience %}
      <div class="item">
        <div>
          <div class="role">
            {{ w.position or w.role }}
            {% if w.details %} · {{ w.details }}{% endif %}
          </div>
          <div class="orgline">{{ w.company }}{% if w.location %} · {{ w.location }}{% endif %}</div>
          {% if w.bullets %}<ul>{% for b in w.bullets %}<li>{{ b }}</li>{% endfor %}</ul>{% endif %}
        </div>
        <div class="dates">{% if w.start %}{{ w.start }}{% if w.end %} – {{ w.end }}{% endif %}{% endif %}</div>
      </div>
      {% endfor %}
    </section>
    {% endif %}

    {% if extracurricular %}
    <section aria-labelledby="xtr">
      <h2 id="xtr">Extracurricular Activities</h2>
      {% for x in extracurricular %}
      <div class="item">
        <div>
          <div class="role">
            {{ x.position }}
            {% if x.details %} · {{ x.details }}{% endif %}
          </div>
          <div class="orgline">{{ x.company }}{% if x.location %} · {{ x.location }}{% endif %}</div>
          {% if x.bullets %}<ul>{% for b in x.bullets %}<li>{{ b }}</li>{% endfor %}</ul>{% endif %}
        </div>
        <div class="dates">{% if x.start %}{{ x.start }}{% if x.end %} – {{ x.end }}{% endif %}{% endif %}</div>
      </div>
      {% endfor %}
    </section>
    {% endif %}

    {% if projects %}
    <section aria-labelledby="proj">
      <h2 id="proj">Projects</h2>
      {% for p in projects %}
      <div class="item">
        <div>
          <div class="role">{{ p.name }}</div>
          {% if p.description %}<ul><li>{{ p.description }}</li></ul>{% endif %}
        </div>
        <div class="dates">{% if p.start %}{{ p.start }}{% if p.end %} – {{ p.end }}{% endif %}{% endif %}</div>
      </div>
      {% endfor %}
    </section>
    {% endif %}

    {% if skills %}
    <section aria-labelledby="skills" class="skills">
      <h2 id="skills">Skills</h2>
      <div class="grid-2">
        {% if skills.programming %}
        <div class="item">
          <div>
            <div class="role">Programming</div>
            <ul>{% for s in skills.programming %}<li>{{ s }}</li>{% endfor %}</ul>
          </div>
        </div>
        {% endif %}
        {% if skills.software %}
        <div class="item">
          <div>
            <div class="role">Software</div>
            <ul>{% for s in skills.software %}<li>{{ s }}</li>{% endfor %}</ul>
          </div>
        </div>
        {% endif %}
      </div>
      {% if skills.certifications %}
      <div class="item" style="margin-top:12px">
        <div>
          <div class="role">Certifications</div>
          <div class="orgline">
            {% for c in skills.certifications %}<span class="tag">{{ c }}</span> {% endfor %}
          </div>
        </div>
      </div>
      {% endif %}
    </section>
    {% endif %}

    <footer>
      <span>Updated: {{ updated }}</span>
    </footer>
  </div>

  <script>
    // Press "p" to print. Works without blocking Cmd/Ctrl+P.
    document.addEventListener('keydown', e => {
      if(e.key.toLowerCase()==='p' && !(e.ctrlKey||e.metaKey)) { window.print(); }
    });
  </script>
</body>
</html>
